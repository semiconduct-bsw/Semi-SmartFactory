    internal class Program

    {
        static void Main(string[] args)

        {
            int sum1 = 0;
            int sum2 = 0;

            for (int i = 0; i <= 100; i++)
            {
                if (i % 2 == 0)
                {
                    sum1 += i;
                }

                else
                {
                    sum2 += i;
                }
            }
            Console.WriteLine(sum1);
            Console.WriteLine(sum2);
        }
    }
}
