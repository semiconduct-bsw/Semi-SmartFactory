namespace _20240709_LocalVariable01
{
    class Program
    {
        static string name = "James"; // 전역변수(메소드의 바깥쪽에서 전역으로 사용)
        static void ShowName() { name = "홍길동";  Console.WriteLine(name); }
        static void Main(string[] args)
        {
            ShowName();
            Console.WriteLine(name);
        }
    }
}
