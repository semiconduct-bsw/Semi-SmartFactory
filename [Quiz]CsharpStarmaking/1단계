        static void Main(string[] args)
        {
            Console.Write("50 이하의 정수를 입력하세요 : ");
            int num = Int32.Parse(Console.ReadLine());

            for (int i = 0; i < num; i++)
            {
                for (int j = 0; j <= i; j++)
                {
                    Console.Write("*");
                }
                Console.WriteLine();
            }
        }
    }
