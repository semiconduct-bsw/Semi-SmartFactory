@{
    ViewData["Title"] = "적정 몸무게 구하기";
}

<h1>적정 몸무게 구하기</h1>

<style>
    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: inline-block;
        width: 250px;
        text-align: right;
        margin-right: 10px;
    }

    input, select {
        width: 200px;
    }

    button {
        margin-left: 190px;
        padding: 5px 10px;
    }
</style>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label for="height">당신의 키를 입력해 주세요. :</label>
        <input type="number" id="height" name="height" step="0.01" required /> cm
    </div>
    <div class="form-group">
        <label for="weight">당신의 몸무게를 입력해 주세요. :</label>
        <input type="number" id="weight" name="weight" step="0.01" required /> kg
    </div>
    <div class="form-group">
        <label for="gender">당신의 성별을 입력해 주세요 :</label>
        <select id="gender" name="gender" required>
            <option value="남성">남성</option>
            <option value="여성">여성</option>
        </select>
    </div>
    <div class="form-group">
        <button type="submit">계산하기</button>
    </div>
</form>

@if (ViewBag.Result != null)
{
    <hr />
    <h2>당신은 @ViewBag.Result 입니다.</h2>
}
